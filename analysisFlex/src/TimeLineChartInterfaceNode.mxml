<?xml version="1.0" encoding="UTF-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" backgroundColor="#00dce9ef" layout="absolute" applicationComplete="{initWindow();}">
	<mx:Script><![CDATA[
        //警告: 在未注册版本中，导出Flex项目时不生成Flex脚本,要生成Flex脚本，请到http://www.shankejingling.com/goumai.html购买完整版。

    ]]></mx:Script>

	<mx:DateValidator id="_TimeLineChartInterfaceNode_DateValidator1" property="text" required="false" inputFormat="YYYY-MM-DD"/>
	<mx:DetailWindow id="detailBox" visible="false" width="70%" height="70%" goClose="{detailBox.visible = false;}" hideEffect="zoomCloseDetail"/>
	<mx:HBox label="图表" autoLayout="true" height="100%" width="100%">
		<mx:VBox width="20%" height="100%">
			<mx:TitleWindow id="controlWin" styleName="controlPanel" width="100%" height="99%" x="1" y="1" layout="vertical" title="控制台" verticalGap="0" paddingLeft="0" paddingRight="0" paddingTop="0">
				<mx:HBox width="100%" borderStyle="none" paddingRight="5" horizontalGap="0">
					<mx:Label text="提示：按图标打开查询窗口" color="#00ff0101"/>
				</mx:HBox>
				<mx:HBox width="100%" height="36" verticalAlign="middle" horizontalGap="2" borderStyle="none" paddingLeft="5">
					<mx:Image id="btnData" width="24" height="24" source="icons/table.png" alpha="0.6" toolTip=" 打开查询条件窗口 " ="{out(event);}" ="" click="{searchSelect();}"/>
				</mx:HBox>
				<mx:HRule height="10" width="100%"/>
				<mx:VBox id="chartconfig" width="100%" verticalGap="0">
					<mx:HBox id="p1" width="100%" paddingBottom="3" borderStyle="none" paddingRight="5" horizontalGap="0">
						<mx:Label width="35%" text="时间间隔：" textAlign="right" fontSize="12"/>
						<mx:ComboBox id="timeInterval" width="65%" textAlign="left" change="{intervalChange();}" dataProvider='{intervals}'/>
					</mx:HBox>
					<mx:VBox id="p2" width="100%" paddingBottom="3" borderStyle="none" paddingLeft="5" paddingRight="5" horizontalGap="0">
						<mx:Label width="35%" text="显示比例：" textAlign="right" fontSize="12"/>
						<mx:HSlider id="scare" width="100%" minimum="1" maximum="50" value="1" change="{scareChange();}"/>
					</mx:VBox>
				</mx:VBox>
				<mx:HRule height="10" width="100%"/>
				<mx:Text id="description" width="100%" textAlign="left" fontSize="12" paddingLeft="0" textIndent="0"/>
			</mx:TitleWindow>
		</mx:VBox>
		<mx:Canvas id="chartContent" width="100%" height="100%">
			<mx:TimeLine id="timeline" itemWidth="150" itemHeight="100" scare="day" width="100%" height="100%" backgroundColor="#0000ff00" backgroundAlpha="0"/>
			<mx:TraceLine id="traceline" itemWidth="150" itemHeight="100" visible="false" includeInLayout="false" scare="day" width="100%" height="100%" backgroundColor="#0000ff00" backgroundAlpha="0"/>
		</mx:Canvas>
	</mx:HBox>
	<mx:Panel id="queryTip" width="250" height="50" x="200" y="100" layout="vertical" visible="false" borderStyle="solid" borderColor="5592405" paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0" cornerRadius="5" borderThickness="1" roundedBottomCorners="true" headerHeight="0" verticalAlign="middle">
		<mx:HBox height="100%" width="100%" verticalAlign="middle" horizontalGap="2" borderStyle="none" paddingLeft="5">
			<mx:Image width="32" height="32" source="icons/loading.swf"/>
			<mx:Label text="正在查询数据，请稍候......" fontSize="14" fontWeight="bold"/>
		</mx:HBox>
	</mx:Panel>
	<mx:TitleWindow id="searchWin" styleName="controlPanel" visible="false" x="1" layout="vertical" y="1" width="90%" height="90%" title="分析" verticalScrollPolicy="auto" horizontalScrollPolicy="off" alpha="1" showCloseButton="true" backgroundAlpha="1" borderAlpha="1" textAlign="left" fontSize="12" horizontalAlign="center" borderThicknessBottom="1" borderThicknessLeft="1" paddingTop="2" borderThicknessTop="1" borderThicknessRight="1" borderColor="131586" backgroundColor="#00fbfdfc" roundedBottomCorners="true" cornerRadius="6" close="{searchWin.visible = false;}" showEffect="zoomOpen" hideEffect="zoomClose">
		<mx:VBox width="100%" height="100%" horizontalAlign="center" verticalGap="3">
			<mx:QueryWindow id="queryBox" width="100%" styleName="queryPanel" titleIcon="{TimeLineChartInterfaceNode__embed_mxml_application_png_128945640}" horizontalAlign="center" borderColor="65793" borderStyle="solid" cornerRadius="3" ="{goQuery(event);}" goClose="{searchWin.visible = false;}"/>
			<mx:VBox width="100%" height="100%" borderThickness="1" borderStyle="solid" paddingLeft="1" paddingRight="1" paddingTop="1" paddingBottom="1" borderColor="10066329" verticalGap="0">
				<mx:DataGrid id="tabResult" width="100%" height="100%" columns="{[_TimeLineChartInterfaceNode_DataGridColumn1_c(), _TimeLineChartInterfaceNode_DataGridColumn2_c()]}"/>
				<mx:HBox id="rowCountBox" width="100%" height="24" paddingLeft="5" paddingRight="5" horizontalAlign="left" verticalAlign="top">
					<mx:Label id="rowCount" text="" fontSize="12"/>
				</mx:HBox>
			</mx:VBox>
		</mx:VBox>
	</mx:TitleWindow>

	<mx:Style>/* //警告: 在未注册版本中，导出Flex项目时不生成Flex脚本,要生成Flex脚本，请到http://www.shankejingling.com/goumai.html购买完整版。
 */</mx:Style>
</mx:Application>
